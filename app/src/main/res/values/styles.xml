<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="android:fontFamily">sans-serif</item>-->
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/bg_button_selector</item>
        <item name="android:textColor">@color/color_button_selector</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:layout_marginStart">@dimen/toolbar_text_margin</item>
    </style>

</resources>
